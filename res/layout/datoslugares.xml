<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondostandard"
    android:orientation="vertical"
    tools:context=".Home" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imgBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:scaleType="fitStart"
            android:src="@drawable/headerlugar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/btnHomeLugar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/homeazul" />

            <TextView
                android:id="@+id/txtImagen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FF029A8C" />

            <ImageView
                android:id="@+id/imgBookmark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/bookmarkvacio" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="415dp"
        android:background="#CC000000" >

        <TextView
            android:id="@+id/txtDirecci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="DirecciÃ³n"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFB3B3B3"
            android:layout_marginRight="10dp"
        	android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/txtAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtDirecci"
            android:layout_below="@+id/txtDirecci"
            android:layout_marginLeft="22dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFB3B3B3" />

        <TextView
            android:id="@+id/txtTelefon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtDirecci"
            android:layout_below="@+id/txtAddr"
            android:layout_marginTop="14dp"
            android:text="Telefono"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFB3B3B3"
            android:layout_marginRight="10dp"
        	android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/txtEspecialTi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtTelefon"
            android:layout_below="@+id/txtTelefon"
            android:layout_marginTop="30dp"
            android:text="Especialidad"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFB3B3B3" />

        <TextView
            android:id="@+id/txtEspecialidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/txtAddr"
            android:layout_below="@+id/txtEspecialTi"
            android:text="Especialidad"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFB3B3B3" />

        <TextView
            android:id="@+id/txtTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtEspecialTi"
            android:layout_toRightOf="@+id/txtAddr"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFB3B3B3" />

    </RelativeLayout>

</LinearLayout>